<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" maxHeight="720.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MenuController">
   <content>
      <VBox alignment="CENTER" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      
          <Label fx:id="labelTitle" alignment="CENTER" contentDisplay="CENTER" text="Menu" textAlignment="CENTER">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <VBox fx:id="vboxStarters">
            <children>
               <Label text="Starters:" underline="true">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </children>
         </VBox>
         <VBox fx:id="vboxMain">
            <children>
               <Label text="Main Dishes:" underline="true">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </children>
         </VBox>
         <VBox fx:id="vboxDesserts">
            <children>
               <Label text="Desserts:" underline="true">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </children>
         </VBox>
         <VBox fx:id="vboxDrinks">
            <children>
               <Label text="Drinks:" underline="true">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </children>
         </VBox>
         <HBox>
            <children>
               <Button fx:id="buttonOrder" mnemonicParsing="false" onAction="#showSwitchToSaveDialog" text="Order!" />
            </children>
         </HBox>
      </VBox>
   </content>
</ScrollPane>
