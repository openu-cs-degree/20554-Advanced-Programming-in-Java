<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientController">
   <children>
      <HBox alignment="CENTER" VBox.vgrow="SOMETIMES">
         <children>
            <Label fx:id="labelScore" text="Score:" HBox.hgrow="ALWAYS" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="labelQuestionCounter" text="Question 1/20" HBox.hgrow="ALWAYS" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="labelTime" text="Time:" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="TOP_CENTER">
         <children>
            <Label fx:id="labelQuestion" alignment="CENTER" contentDisplay="CENTER" text="Question that is very very very very very very long and very very question" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <GridPane alignment="CENTER" hgap="10.0" vgap="10.0" VBox.vgrow="ALWAYS">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="300.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="300.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
          <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
