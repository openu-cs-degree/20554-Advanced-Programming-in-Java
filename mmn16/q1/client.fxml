         <children>
            <Button fx:id="buttonAnswer1" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#clickButtonAnswer1" text="answer 1" textAlignment="CENTER" wrapText="true" />
            <Button fx:id="buttonAnswer2" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#clickButtonAnswer2" text="answer 2 which is a bit longer" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="1" />
            <Button fx:id="buttonAnswer3" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#clickButtonAnswer3" text="answer 3 which is much much much much much much longer" textAlignment="CENTER" wrapText="true" GridPane.rowIndex="1" />
            <Button fx:id="buttonAnswer4" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#clickButtonAnswer4" text="answer 1" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
   </children>
